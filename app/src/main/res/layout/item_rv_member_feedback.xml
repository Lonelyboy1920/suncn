<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemMemberFeedbackOrganizerTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主办单位"
            android:textColor="@color/font_content"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/tvItemMemberFeedbackOrganizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="主办单位"
            android:textColor="@color/font_title"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_r5_bg_f5f5f5"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">
        <!--办理结果-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办理结果"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_normal" />

            <LinearLayout
                android:id="@+id/rgItemHandlingResult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rbItemHandlingResultYes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_unchecked_yes"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="满意"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/rbItemHandlingResultNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_unchecked_no"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="不满意"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>
        </LinearLayout>
        <!--办理态度-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办理态度"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_normal" />

            <LinearLayout
                android:id="@+id/rgItemHandlingAttitude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/rbItemHandlingAttitudeYes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_unchecked_yes"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="满意"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/rbItemHandlingAttitudeNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_unchecked_no"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="不满意"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>
        </LinearLayout>
        <!--总体评价-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总体评价"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_normal" />

            <LinearLayout
                android:id="@+id/rgItemOverallEvaluation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rbItemOverallEvaluationYes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_unchecked_yes"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="满意"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/rbItemOverallEvaluationNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_unchecked_no"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="不满意"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>
        </LinearLayout>

        <com.gavin.giframe.widget.GIEditText
            android:id="@+id/etItemParticularView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:fadeScrollbars="false"
            android:gravity="top"
            android:hint="请输入具体意见"
            android:inputType=""
            android:minLines="6"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textColor="@color/font_title"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_15"
            app:maxLength="@integer/int_textlength_5000" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvItemSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_circle_add_bg"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal"
        android:visibility="gone" />

</LinearLayout>