<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/view_head_white" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:contentDescription="TODO"
        android:src="@color/line_bg_white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_bg_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_old_password"
                android:textColor="@color/font_content"

                android:textSize="@dimen/font_15" />

            <com.suncn.ihold_zxztc.view.ClearEditText
                android:id="@+id/et_old_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableRight="@mipmap/icon_login_edit_clear"
                android:drawablePadding="2dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@drawable/font_login_selector"
                android:textColorHint="@color/font_source"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_normal" />

            <com.gavin.giframe.widget.GITextView
                android:id="@+id/tv_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:text="@string/fontion_pwd_gone"
                android:textColor="@color/font_source"
                android:textSize="@dimen/font_medium"
                app:myStyle="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_new_password"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_15" />

            <com.suncn.ihold_zxztc.view.ClearEditText
                android:id="@+id/et_new_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableRight="@mipmap/icon_login_edit_clear"
                android:drawablePadding="2dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@drawable/font_login_selector"
                android:textColorHint="@color/font_source"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_normal" />

            <com.gavin.giframe.widget.GITextView
                android:id="@+id/tv_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:text="@string/fontion_pwd_gone"
                android:textColor="@color/font_source"
                android:textSize="@dimen/font_medium"
                app:myStyle="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_confirm_password"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_15" />

            <com.suncn.ihold_zxztc.view.ClearEditText
                android:id="@+id/et_confirm_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableRight="@mipmap/icon_login_edit_clear"
                android:drawablePadding="2dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@drawable/font_login_selector"
                android:textColorHint="@color/font_source"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_normal" />

            <com.gavin.giframe.widget.GITextView
                android:id="@+id/tv_confirm_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:text="@string/fontion_pwd_gone"
                android:textColor="@color/font_source"
                android:textSize="@dimen/font_medium"
                app:myStyle="1" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/string_modify_pwd_tips"
        android:textColor="@color/font_source"
        android:textSize="@dimen/font_13"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_submit"
        style="@style/style_btn_submit"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/string_sure" />

</LinearLayout>