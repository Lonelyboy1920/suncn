<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <com.gavin.giframe.widget.GITextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_view_bg_2eb"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"
        android:text="5月6日  09:30"
        android:textColor="@color/font_content"
        android:textSize="@dimen/font_10"
        app:myStyle="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_application_main"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@mipmap/notice_hytz"
                android:contentDescription="TODO" />

            <com.gavin.giframe.widget.GITextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="提案状态"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_mini" />

            <com.gavin.giframe.widget.GITextView
                android:id="@+id/tv_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_dot"
                android:textColor="@color/red"
                android:textSize="6sp" />
        </LinearLayout>

        <View
            style="@style/style_line_bg_white"
            android:layout_marginTop="10dp" />

        <com.gavin.giframe.widget.GITextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="你的提案《关于改善幼儿园午餐标准的建议》已经立案，并交由教育局办理 "
            android:textColor="@color/font_title"
            android:textSize="@dimen/font_15"
            app:myStyle="3" />

        <View
            style="@style/style_line_bg_white"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.gavin.giframe.widget.GITextView
                android:id="@+id/tv_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/string_look_detail"
                android:textColor="@color/color_45"
                android:textSize="@dimen/font_mini" />

            <com.gavin.giframe.widget.GITextView
                style="@style/style_arrow"
                android:gravity="right"
                android:textSize="@dimen/font_small" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>