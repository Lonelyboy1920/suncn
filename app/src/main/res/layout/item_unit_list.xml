<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <com.gavin.giframe.widget.GITextView
            android:id="@+id/tv_lv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/font_zd"
            android:textColor="@color/font_source"
            android:textSize="@dimen/font_8"
            app:myStyle="1" />

        <com.gavin.giframe.widget.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_person" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="安徽省政协"
            android:textColor="@color/font_title"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+订阅"
            android:textColor="@color/view_head_bg" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>