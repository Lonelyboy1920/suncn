<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/view_head"/>

    <com.gavin.giframe.widget.GITextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="&#xe685; 签到成功"
        android:textColor="@color/zxta_state_green"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@mipmap/signin_result_time_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/string_time"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:56"
            android:textColor="@color/white"
            android:textSize="33dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.gavin.giframe.widget.GITextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="&#xe686;会议地址范围内"
        android:textColor="@color/font_content"
        android:textSize="@dimen/font_normal"/>

    <Button
        android:id="@+id/btn_submit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_btn_report_cause_bg"
        android:text="@string/string_reason_for_report"
        android:textColor="#f7635c"
        android:textSize="@dimen/font_small"/>
</LinearLayout>
