<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#300f58b1"
                android:startColor="#30808080" />
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item
        android:top="1dp"
        android:left="1dp"
        android:bottom="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="@color/colorWhite"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>