<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="2dp"
        android:bottom="1dp">

        <shape>
            <corners android:radius="3dp"/>

            <solid android:color="#99CBCBCB"/>
        </shape>

    </item>

    <item
        android:right="2dp"
        android:left="2dp"
        >

        <selector>

            <item android:state_pressed="true">
                <shape>
                    <corners
                        android:radius="3dp"/>

                    <solid
                        android:color="#99CBCBCB"/>
                </shape>
            </item>

            <item>
                <shape>
                    <corners
                        android:radius="3dp"/>

                    <solid
                        android:color="@color/colorActivityBackground"/>
                </shape>
            </item>

        </selector>

    </item>

</layer-list>