<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/iv_chat_loc_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/iv_chat_loc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_chat_loc_icon"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/iv_chat_loc_icon"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_chat_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="5dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_alignStart="@id/iv_chat_loc_title"
            android:layout_below="@id/iv_chat_loc_title"
            android:textColor="@color/colorTextUnFocused"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>