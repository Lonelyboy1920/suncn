<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/view_title"
        layout="@layout/title_bar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_login_for_pc"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/ic_rounded_rectangle_btn"
        android:layout_marginStart="@dimen/dimen_margin_40"
        android:layout_marginEnd="@dimen/dimen_margin_40"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorWhite"
        android:text="@string/login_to_pc"
        android:textSize="@dimen/text_view_size_focused"
        />

    <TextView
        android:id="@+id/tv_cancel_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBtnBlue"
        android:textSize="13sp"
        android:text="@string/cancel_login"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        />

</LinearLayout>