<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/colorBlack"/>

    <RelativeLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE2A569B"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_left"
            android:paddingStart="@dimen/dimen_margin_16"
            android:paddingEnd="@dimen/dimen_margin_16"/>

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_round_unselected"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/dimen_margin_16"
            android:paddingStart="@dimen/dimen_margin_16"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EBEBEB"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_artwork"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/contact_artwork"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_round_unselected"
            android:drawablePadding="5dp"
            android:paddingStart="5dp"
            />

        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btn_sure"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:text="@string/contact_edit"
            android:textColor="@color/colorBtnNormal"
            android:textSize="15sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/chat_send"
            android:textColor="@color/colorBtnNormal"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_margin_16"/>
    </RelativeLayout>

</RelativeLayout>