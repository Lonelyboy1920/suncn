<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground">

    <include
        android:id="@+id/view_mn_title"
        layout="@layout/title_bar"/>

    <EditText
        android:id="@+id/et_mn_input"
        android:layout_below="@+id/view_mn_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:gravity="top"
        android:padding="3dp"/>

    <com.gavin.giframe.widget.GITextView
        android:id="@+id/tv_mn_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextUnFocused"
        android:layout_below="@+id/et_mn_input"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        android:text="0/50"
        />

</RelativeLayout>