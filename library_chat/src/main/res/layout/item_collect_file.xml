<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_file_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_file_icon"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tv_file_suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_file_name"
        android:layout_below="@+id/tv_file_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorTextUnFocused"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/tv_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_file_suffix"
        android:layout_alignBottom="@+id/tv_file_suffix"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorTextUnFocused"
        android:textSize="10sp"
        />

</RelativeLayout>