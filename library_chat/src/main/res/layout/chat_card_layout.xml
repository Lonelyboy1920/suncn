<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:background="@drawable/view_round_white"
        android:padding="5dp"
        android:layout_margin="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_chat_card_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            />

        <TextView
            android:id="@+id/iv_chat_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_chat_card_icon"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/iv_chat_card_icon"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_chat_card_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:paddingEnd="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignStart="@id/iv_chat_card_title"
            android:layout_below="@id/iv_chat_card_title"
            android:textColor="@color/colorTextUnFocused"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/iv_chat_card_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_chat_card_icon"
            android:layout_marginTop="10dp"
            android:background="@color/colorLine" />

        <TextView
            android:id="@+id/tv_chat_card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_chat_card_line"
            android:textColor="@color/colorTextUnFocused"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            />

    </RelativeLayout>

</LinearLayout>