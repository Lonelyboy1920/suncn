<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/view_round_white"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_forward"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="转发给同事"
            android:textColor="#494949"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_wechat"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="分享给微信好友"
            android:textColor="#494949"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_share_wechat_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_wechat_friend"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="分享到朋友圈"
            android:textColor="#494949"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/view_round_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cancel_item"
            style="@style/popup_menu_item_text_style"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>