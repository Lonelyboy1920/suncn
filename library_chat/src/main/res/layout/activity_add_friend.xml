<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/view_add_title"
        layout="@layout/title_bar"/>

    <include
        android:id="@+id/view_add_info"
        layout="@layout/user_info_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friend_invite_tag"
        android:layout_marginStart="@dimen/dimen_margin_16"
        android:textColor="@color/colorTextUnFocused"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dimen_margin_16"
        android:layout_marginEnd="@dimen/dimen_margin_16"
        android:layout_marginTop="10dp"
        android:background="@drawable/view_round_edit"
        android:gravity="center_vertical">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_i_am"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            />

        <EditText
            android:id="@+id/et_add_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/ic_rounded_rectangle_btn"
        android:layout_marginStart="@dimen/dimen_margin_16"
        android:layout_marginEnd="@dimen/dimen_margin_16"
        android:layout_marginTop="20dp"
        android:text="@string/user_detail_add_friend"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        />

</LinearLayout>